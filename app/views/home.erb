<div id="accordion" role="tablist">

  <% Place.categories.each { |k,v| %>    

    <div class="card mb-1">
      <div class="card-header" role="tab" id="heading-<%=v%>">
        <h5 class="mb-0">
          <a data-toggle="collapse" href="#collapse-<%=v%>" role="button">
            <%=k%>
          </a>
        </h5>
      </div>      

      <div id="collapse-<%=v%>" class="collapse <%='show' if v == 'learning' %>" role="tabpanel" data-parent="#accordion">
        <div class="card-body pb-0">
          <div class="row no-gutters">
            <% Place.where(category: v).shuffle.each { |place| %>     
              <div class="col-md-4 mb-3">
                <div class="mr-md-3">
                  <%= partial :place, :object => place %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>          

  <% } %>
</div>
