<p>
<%
terms = Term.all.map { |term| term['Name'].downcase.split(' ') }.flatten
@frequency.sort_by { |w,f| -f }.each { |w,f| if w.length > 4 && f > (x=10) && !@stops.include?(w) && !terms.include?(w) %>
    <a href="/search?q=<%=w%>" class="text-dark" title="<%= f %>" style="font-size: <%=em = f.to_f/x; em > 10 ? 10 : em%>em">  <%= w %>   </a>
  <% end } %>

</p>
    
<p><%
domains = Organisation.all.map { |organisation| organisation['Domain'] }
@host_frequency.sort_by { |h,f| -f }.each { |h,f| if f > (x=1) && !domains.include?(h) %>
  <a href="/search?q=<%=h%>" class="text-dark" title="<%= f %>" style="font-size: <%=em = f.to_f/x; em > 10 ? 10 : em%>em">  <%= h %>  </a>
<% end } %></p>