<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%
    [
      'bootstrap.min.css',
      'font-awesome.min.css',
      'share.css',
      'app.css'        
      ].each { |file| %> 
      <link rel="stylesheet" href="/stylesheets/<%=file%>" />    
    <% } %>

    <% [
      'jquery-1.11.2.min.js',
      'bootstrap.min.js',
      'app.js',
      ].each { |file| %>
      <script src="/javascripts/<%=file%>"></script>
    <% } %>

    <%= favicon_tag 'favicon.png' %>
    <title><%=@title%></title>
    <meta name="description" content="<%=@og_desc%>">
    <meta property="og:title" content="<%=@title%>" />
    <meta property="og:image" content="<%=@og_image%>" />

    <style>
<% if request.path.starts_with?('/blog') %>
        #l > div, #r > div { margin: 20px 0; }
        #l > div { float: none; }
        #r > div { float: none }
        body { background-color: rgba(0,0,0,0.5) }
<% else %>
        body {  background-image: url(/images/diy.jpeg); background-position: center top; background-size: cover; padding-top: 0 }      
<% end %>
    </style>

  </head>
  <body>

    <div id="fb-root"></div>
    <script>(function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id))
          return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=619967114806800";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>    

    <%= partial :alert %>

    <div class="container-fluid">

      <div class="row">

        <div class="col-sm-4" id="l">

          <div>

            <h1 style="margin-top:0;font-size: 24px">Stephen Reid</h1>

            <ul class="fa-ul" style="padding: 0; margin-bottom: 0;">
              <li><i class="fa fa-li fa-envelope"></i> <a target="_blank" href="mailto:stephen.reid.inbox@gmail.com">stephen.reid.inbox@gmail.com</a></li>              
              <li><i class="fa fa-li fa-facebook-square"></i> <a target="_blank" href="http://facebook.com/stephenreid.0">/stephenreid.0</a></li>
              <li><i class="fa fa-li fa-twitter"></i> <a target="_blank" href="http://twitter.com/stephenreid_">stephenreid_</a></li>
              <li><i class="fa fa-li fa-github"></i> <a target="_blank" href="http://github.com/wordsandwriting">wordsandwriting</a></li>
              <li><i class="fa fa-li fa-soundcloud"></i> <a target="_blank" href="http://soundcloud.com/wordsandwriting">wordsandwriting</a></li>
            </ul>

            <div style="margin: 10px 0">
              <div class="fb-follow" data-href="https://www.facebook.com/stephenreid.0" data-layout="button_count" data-size="small" data-show-faces="true"></div>
            </div>
            <div>
              <a href="https://twitter.com/stephenreid_" class="twitter-follow-button" data-show-screen-name="false" data-show-count="true">Follow @stephenreid_</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
            
          </div>

        </div>
        <div class="<% if request.path.starts_with?('/blog') %>col-md-8<% else %> col-sm-5 col-sm-offset-3 <% end %>" id="r">

          <div>

            <nav class="navbar navbar-inverse" style="border: 0; background: rgba(0,0,0,0.3); border-radius: 0; margin-bottom: 10px">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                  <%= ul_nav 'nav navbar-nav', [
                    ['Bio' ,'/'],
                    ['Blog', '/blog'],
                    ] %>
                </div>
              </div>
            </nav>

            <%= yield %>
          </div>

        </div>

      </div>
    </div>

  </body>
</html>
