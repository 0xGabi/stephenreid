
<%
agent = Mechanize.new
result = agent.get("https://iframe.ly/api/iframely?url=#{post['Link']}&api_key=d17340ff4312936660549e")
json = JSON.parse(result.body)
%>

<div class="card">
  <a href="/posts/<%=post.id%>">
    <img class="card-img-top" src="<%= json['links']['thumbnail'].first['href'] %>">
  </a>
  <div class="card-body">
    <h5 class="card-title">
      <a href="/posts/<%=post.id%>" class="text-dark">
        <%= json['meta']['title'] %>
      </a>
    </h5>
    <p class="card-text"><%= json['meta']['description'] %></p>
  </div>
</div>